-#  This file is app/views/movies/search_director.html.haml
%h1 Movies from the Same Director

%table#movies
  %thead
    %tr
      %th Title
      %th Rating
      %th Release Date
      %th Director
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director
        %td= link_to "More about #{movie.title}", movie_path(movie)
